<Window x:Class="EmployeeSystem.ManagersWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmployeeSystem"
        mc:Ignorable="d"
        Title="ManagersWin" Height="450" Width="800">
    <Grid >
        <Label x:Name="LabelUser" Content="User Name" FontSize="22" FontFamily="Segoe UI Black" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="272,90,0,0"></Label>
        <TextBox x:Name="UserTXT" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="22" Width="252" Height="50" Margin="272,129,0,0" FontFamily="Segoe UI Black"></TextBox>
        <PasswordBox Name="PassUsr" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="22" Width="252" Height="50" Margin="272,217,0,0"/>
        <Label x:Name="Password_User" Content="Password" FontSize="22" FontFamily="Segoe UI Black" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="270,179,0,0"/>
        <Button x:Name="ConfirmBtn" Content="Confirm" FontSize="22" FontFamily="Segoe UI Black" HorizontalAlignment="Left" VerticalAlignment="Top" Background="White" Margin="352,288,0,0" Click="ConfirmBtn_Click"></Button>
    </Grid>
</Window>
